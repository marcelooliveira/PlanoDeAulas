@model List<PadraoMVC.Models.Score>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Ranking de Jogadores";
}

<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<h2>Ranking</h2>

<p>Olá, estamos na View Template!</p>

<table>
    <tr>
        <td>
            Id
        </td>
        <td>
            Avatar
        </td>
        <td>
            Nome Jogador
        </td>
        <td>
            Pontos
        </td>
    </tr>
    @foreach (var score in Model)
    {
        <tr>
            <td>
                @score.Id
            </td>
            <td>
                @score.Avatar
            </td>
            <td>
                @score.PlayerName
            </td>
            <td>
                @score.Points
            </td>
        </tr>
    }

</table>